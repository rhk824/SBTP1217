<Window x:Class="SBTP.View.TPJ.ChooseWell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SBTP.View.TPJ"
        mc:Ignorable="d"
        Title="ChooseWell" Height="450" Width="350" Background="#eee">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="操作">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="井号："/>
                    <TextBox Name="wellname" Width="200" TextInput="wellname_TextInput"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                    <Button Content="添加" Width="80"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <DataGrid Grid.Row="1" ItemsSource="{Binding WaterWellsCollection}" />

    </Grid>
</Window>
